extends ../layout

block content
    h1.
        post ID #{post._id}
    form(action=`/posts/${post._id}/edit`,method='post',name='updatepost',enctype='application/x-www-form-urlencoded')
        p Title: 
            input#inputName(type='text', value=`${post.title}`, name='title')
        p Body: 
            textarea#inputName(type='text', name='body')
              #{post.body}
        p 
            input(type='hidden',value='PUT',name='_method')
        p 
            button#btnSubmit(type='submit').
                Update